{
  "name": "lista-firme-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "bunx --bun tsc -b && bunx --bun vite build",
    "lint": "eslint .",
    "preview": "bunx --bun vite preview",
    "type-check": "tsc --noEmit",
    "check:ci": "biome check --changed --vcs-default-branch=origin/$GITHUB_BASE_REF --no-errors-on-unmatched src/",
    "check:all": "biome check src/",
    "check": "biome check --staged src/",
    "format:all": "biome check --write src/",
    "format": "biome check --staged --write src/",
    "i18n:extract": "i18next 'src/**/*.{ts,tsx}' [-oc] && for f in public/locales/*.json; do jq -M 'walk(if type == \"string\" and . == \"\" then null else . end)' \"$f\" > \"$f.tmp\" && mv \"$f.tmp\" \"$f\"; done",
    "optimize-svgs": "svgo -f src/assets/icons",
    "typecheck": "bunx --bun tsc --noEmit --pretty",
    "validate": "bun run check:ci && bun run typecheck"
  },
