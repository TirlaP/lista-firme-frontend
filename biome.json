{
  "$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": ["src/database.types.ts", "public/**", "src/assets/**"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "useLiteralKeys": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "warn",
        "useImportExtensions": "off"
      }
    },
    "ignore": ["dist"]
  },
  "javascript": { "formatter": { "quoteStyle": "double" } },
  "css": {
    "parser": {
      "cssModules": true
    }
  }
}
